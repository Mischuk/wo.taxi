.page-title
  font-size 30px
  line-height 1
  text-transform uppercase
  color #000

.section-heading
  circe()
  position relative
  text-align center
  padding 30px 0
  font-size 36px
  line-height 1.1
  span
    color $blue

.paragraph
  light()
  font-size 20px
  line-height 30px
  &.small
    font-size 16px
    line-height 1.2
  &.large
    font-size 18px
    line-height 1.2
    @media screen and (min-width: 460px)
      font-size 20px
    @media screen and (min-width: 768px)
      font-size 24px
  &.light
    color $text-light
  &.center
    text-align center