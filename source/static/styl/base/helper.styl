.row
  clearfix()

.vertical-outer
  display table
  width 100%
  height 100%

.vertical-inner
  display table-cell
  vertical-align middle
  width 100%

.centered
  display table-cell
  vertical-align middle
  text-align center
  width 100%

.fluid-image
  display block
  max-width 100%
  height auto

.full
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  &.image
    background-repeat no-repeat
    background-position 50%
    background-size cover

.url-image
  background-repeat no-repeat
  background-position 50%
  background-size cover